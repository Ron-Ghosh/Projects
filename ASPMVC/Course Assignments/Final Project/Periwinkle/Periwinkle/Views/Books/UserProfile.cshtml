
@{
    ViewBag.Title = "UserProfile";
    List<string> ProfileInformation = (List<string>)Session["ProfileInfo"];
}

<h2>User Profile</h2>

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
    </tr>
    <tr>
        <td>
            @ProfileInformation[0]
        </td>
        <td>
            @ProfileInformation[1]
        </td>
        <td>
            @ProfileInformation[2]
        </td>
    </tr>
</table>

<hr />

<h2>Rentals</h2>

<table class="table">
    <tr>
        <th>
            Book Name
        </th>
        <th>

        </th>
    </tr>

    @for (var i = 3; i < ProfileInformation.Count; i++)
    {
        <tr>
            <td>@ProfileInformation[i]</td>
            <td>@Html.ActionLink("Return", "ReturnBook", new { name = ProfileInformation[i] })</td>
        </tr>
    }
</table>

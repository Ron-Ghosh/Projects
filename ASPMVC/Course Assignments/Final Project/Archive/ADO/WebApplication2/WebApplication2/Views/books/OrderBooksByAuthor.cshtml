@model IEnumerable<WebApplication2.Models.book>

@{
    ViewBag.Title = "OrderBooksByAuthor";
}

<h1 class="text-center">Book Library</h1>

@using (Html.BeginForm("Index", "books", FormMethod.Get))
{
    <div class="well text-center">
        <h3>Search By:</h3>
        @Html.RadioButton("SearchBy", "Author", true) <text> Author &nbsp; </text>
        @Html.RadioButton("SearchBy", "Title") <text> Title </text>
        <br />
        @Html.TextBox("search", "", new { @class = "form-control", @type = "text" }) <br />
        <input type="submit" value="Search" class="btn btn-default" />
    </div>
}

<br />

<p class="well text-center">
    @Html.ActionLink("Create New", "Create") &nbsp; || &nbsp;
    @Html.ActionLink("Order By Id", "Index") &nbsp; || &nbsp;
    @Html.ActionLink("Order By Author", "OrderBooksByAuthor") &nbsp; || &nbsp;
    @Html.ActionLink("Order By Title", "OrderBooksByTitle")
</p>

<div class="well">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.copies)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.copies)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>